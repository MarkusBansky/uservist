<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="Markiian">
        <comment>Add email to user table</comment>
        <addColumn tableName="users">
            <column name="email" type="text" defaultValue="no-reply@uservist.com"/>
        </addColumn>
    </changeSet>

    <changeSet id="2" author="Markiian">
        <comment>Add not null constraint</comment>
        <addNotNullConstraint tableName="users" columnName="email" />
    </changeSet>

    <changeSet id="3" author="Markiian">
        <comment>Add unique index for token in user_service_invitations</comment>
        <createIndex tableName="users" indexName="users_email_uindex" unique="true">
            <column name="email" />
        </createIndex>
    </changeSet>

</databaseChangeLog>