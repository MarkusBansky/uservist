<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="Markiian">
        <comment>Insert basic roles for users</comment>

        <insert tableName="service_roles">
            <column name="user_id" valueComputed="(SELECT user_id FROM users WHERE username='uservist')" />
            <column name="service_id" valueComputed="(SELECT service_id FROM services WHERE name='uservist')" />
            <column name="role" value="ADMIN" />
        </insert>

        <rollback>
            <delete tableName="users" />
        </rollback>
    </changeSet>

</databaseChangeLog>